@model IEnumerable<HTYF.Domain.Entities.Event>

@{
    ViewData["Title"] = "Upcoming Events";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Upcoming Events</h2>
        <span class="badge bg-secondary">@Model.Count() Events</span>
    </div>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="date"
                   name="date"
                   value="@Context.Request.Query["date"]"
                   class="form-control" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Filter
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No events found for the selected date.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var evt in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title fw-semibold">@evt.Title</h5>

                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar-event"></i>
                                @evt.EventDateTime.ToString("ddd, dd MMM yyyy")
                            </p>

                            <span class="badge bg-light text-dark mb-2 d-inline-block">
                                📍 @evt.Location
                            </span>

                            <p class="card-text">
                                @(string.IsNullOrWhiteSpace(evt.Summary)
                                                        ? "No description provided."
                                                        : evt.Summary.Length > 120
                                                        ? evt.Summary.Substring(0, 120) + "…"
                                                        : evt.Summary)
                    </p>
                </div>

                        <div class="card-footer bg-white border-0">
                            <a asp-action="Details"
                               asp-route-id="@evt.Id"
                               class="btn btn-outline-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                }
        </div>
    }
</div>
